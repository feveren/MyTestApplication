<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rent.mytestapplication.TabBarActivity">

    <com.rent.mytestapplication.widget.CommonTabLayout
        android:id="@+id/tab_bar1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/holo_green_dark"
        app:textSelectedColor="@android:color/holo_blue_bright"
        app:textSelectedSize="16sp"
        app:indicatorColor="@android:color/black"
        app:indicatorSelectedColor="@android:color/holo_red_dark"
        app:paddingStart="10dp"
        app:paddingEnd="10dp"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
